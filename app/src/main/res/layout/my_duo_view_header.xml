<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/profile_img"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/_150sdp"
        app:cardBackgroundColor="@color/teal_700"
        >
        <ImageView
            android:id="@+id/resultImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/profile_pic"
            android:layout_gravity="center">

        </ImageView>


    </androidx.cardview.widget.CardView>


    <TextView
        style="@style/Style_monst_medium_16"
        android:id="@+id/duo_view_header_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_toEndOf="@+id/profile_img"
        android:text="@string/haley_lov"
        android:singleLine="true"
        android:layout_marginTop="@dimen/_48sdp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:gravity="center"
        />

    <TextView
        style="@style/Style_gmail"
        android:id="@+id/email_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/duo_view_header_text_title"
        android:layout_toRightOf="@+id/profile_img"
        android:layout_alignBaseline="@id/profile_img"
        android:gravity="center"
        android:textSize="@dimen/_10ssp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_7sdp"
        android:text="@string/email_title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        />


</RelativeLayout>